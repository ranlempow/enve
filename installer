
warn() {
  printf "${tty_red:-}Warning${tty_reset:-}: %s\n" "$(chomp "$1")" >&2
}

# First check OS.
OS="$(uname)"
if [ "${OS}" = "Linux" ]; then
    HOMEBREW_ON_LINUX=1
elif [ "${OS}" = "Darwin" ]; then
    HOMEBREW_ON_MACOS=1
else
    abort "Homebrew is only supported on macOS and Linux."
fi

rm -rf ~/.var/enve
mkdir -p ~/.var/enve
CLONE_TO=~/.var/enve install_enve_tar


cat <<EOS
- Run \`enve help\` to get started
- Further documentation:
    https://enve.brew.sh

EOS
